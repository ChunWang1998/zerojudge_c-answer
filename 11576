#include <iostream>

using namespace std;

int main()
{
    int x;
    cin>>x;
    int a,b;
    a=x/100;
    b=x%100;

   if(b==0)
    {
        if(a>12)
        cout<<"0"<<a-12<<":"<<b<<"0 p.m.";
        else if(a==00)
            cout<<"0"<<a<<":0"<<b<<" a.m.";
    else if(a==12)
        cout<<a-12<<"0"<<":"<<b<<"0 p.m.";
        else if(a<10)
    cout<<"0"<<a<<":"<<b<<"0 a.m.";
        else
            cout<<a<<":"<<b<<" a.m.";
    }
    else
    {
    if(a>12)
        cout<<"0"<<a-12<<":"<<b<<" p.m.";
        else if(a==00)
             cout<<"0"<<a<<":"<<b<<" a.m.";
        else if(a==12)
         cout<<a-12<<"0"<<":"<<b<<"0 p.m.";
        else if(a<10)
    cout<<"0"<<a<<":"<<b<<" a.m.";
    else
        cout<<a<<":"<<b<<" a.m.";
    }
    return 0;
}
